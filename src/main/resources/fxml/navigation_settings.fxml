<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="256.0" prefWidth="270.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Zoom">
         <VBox.margin>
            <Insets top="3.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="zoomField" text="zoom" />
      <Label text="Position X">
         <VBox.margin>
            <Insets top="3.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="positionXField" />
      <Label text="Position Y">
         <VBox.margin>
            <Insets top="3.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="positionYField" />
      <Label text="Zoom step">
         <VBox.margin>
            <Insets top="3.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="zoomStepField" />
      <Label text="Position step (px)">
         <VBox.margin>
            <Insets top="3.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="positionStepField" />
      <HBox prefHeight="0.0" prefWidth="174.0" spacing="3.0">
         <children>
            <Button maxWidth="-Infinity" mnemonicParsing="false" onAction="#handleOkButton" prefWidth="200.0" text="OK" HBox.hgrow="ALWAYS" />
            <Button maxWidth="-Infinity" mnemonicParsing="false" onAction="#closeWindow" prefWidth="200.0" text="Cancel" HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets top="2.0" />
         </padding>
      </HBox>
   </children>
   <cursor>
      <Cursor fx:constant="DEFAULT" />
   </cursor>
   <padding>
      <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
   </padding>
</VBox>
