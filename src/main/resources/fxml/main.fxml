<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="TOP_RIGHT" prefHeight="368.0" prefWidth="534.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.potat0x.fractalway.MainController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <AnchorPane prefHeight="200.0" prefWidth="200.0">
         <children>
            <Canvas fx:id="canvas" focusTraversable="true" height="275.0" onKeyPressed="#handleKeyPressed" onMouseClicked="#updateFractalPosition" onScroll="#updateFractalZoom" width="300.0" />
         </children>
      </AnchorPane>
      <Label fx:id="deviceInfoLabel" alignment="TOP_RIGHT" blendMode="DIFFERENCE" focusTraversable="false" mouseTransparent="true" text="device info" textAlignment="RIGHT" textFill="LIME" GridPane.halignment="RIGHT" GridPane.valignment="TOP">
         <GridPane.margin>
            <Insets right="4.0" top="2.0" />
         </GridPane.margin>
      </Label>
      <MenuBar maxWidth="-Infinity" GridPane.halignment="LEFT" GridPane.valignment="TOP">
         <menus>
            <Menu fx:id="fractalMenu" mnemonicParsing="false" text="Fractal" />
            <Menu mnemonicParsing="false" text="View">
               <items>
                  <Menu fx:id="canvasCursorMenu" mnemonicParsing="false" text="Mouse cursor" />
                  <CheckMenuItem fx:id="deviceInfoMenuItem" mnemonicParsing="false" text="Device info" />
               </items>
            </Menu>
            <Menu fx:id="settingsMenu" mnemonicParsing="false" text="Settings">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#showFractalSettingsWindow" text="Fractal" />
                  <MenuItem mnemonicParsing="false" onAction="#showNavigationSettingsWindow" text="Navigation" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </children>
</GridPane>
